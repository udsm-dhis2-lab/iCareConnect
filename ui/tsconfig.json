{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "paths": {
      "tslib": ["./node_modules/tslib/tslib.d.ts"]
    },
    "lib": ["es2018", "dom"],
    "useDefineForClassFields": false,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  }
}
